<script type="text/javascript">
require(['jquery', 'owl_carausel'], function ($) {
    $(document).ready(function(){
        owlInitialize();

        $('#Individual').show();

        $('.tablinks').on('click', function(event){
          event.preventDefault();
          $('.tablinks').removeClass('active');
          $(this).addClass('active');
          $('.tabcontent').hide();
          $($(this).data('content')).show();
        });
    });
    $(window).resize(function() {
        owlInitialize();
    });
    function owlInitialize() {
        if ($('.slide-product .variation').css('display') == 'none')
        {
            $('.slide-product .variation').remove();
        } else if($('.slide-product .control').css('display') == 'none') {
            $('.slide-product .control').remove();
        }
        if ($(window).width() <= 890) {
            $('.slide-product').addClass("owl-carousel");
            $('.pricing-new-block').addClass('Mobile_viewcontent');
            $('.pricing-new-block').removeClass('Desktop_viewcontent');
            $('.owl-carousel').owlCarousel({
                loop: true,
                margin: 10,
                responsiveClass: true,
                navText: ['<button type="button" role="presentation" class="owl-prev"><span aria-label="Previous">‹</span></button>','<button type="button" role="presentation" class="owl-next"><span aria-label="Next">›</span></button>'],
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 3,
                        nav: true
                        
                    }
                }
            });

        $(".owl-item").each(function(index, value) {
            var ptype = $(this).children(".col-box.item").attr("data-pricingtype");
            $(this).addClass(ptype);
        });

        }else{
            $('.owl-carousel').owlCarousel('destroy');
            $('.slide-product').removeClass("owl-carousel");
            $('.pricing-new-block').removeClass('Mobile_viewcontent');
            $('.pricing-new-block').addClass('Desktop_viewcontent');
        }
    }
    
});
</script>