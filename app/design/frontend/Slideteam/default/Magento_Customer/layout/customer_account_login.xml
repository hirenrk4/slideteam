<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
		<css src="Magento_Theme::css/magnific-popup/magnific-popup.css" media="all"/>
        <css src="Magento_Theme::css/customer/customer-style.css" media="all" order="200"/>
    </head>
    <body>
        <move element="customer_form_login" destination="customer.login.container" after="customer.new" />
        <referenceBlock name="category-links" remove="true" />
        <referenceContainer name="customer.login.container" htmlTag="div" htmlClass="login-container container" />
        <referenceContainer name="page.messages" htmlTag="div" htmlClass="page messages container login-error" />
    </body>
</page>
