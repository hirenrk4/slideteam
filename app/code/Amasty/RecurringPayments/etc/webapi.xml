<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/amasty-recurring-payments/estimate-by-shipping-information" method="POST">
        <service class="Amasty\RecurringPayments\Api\EstimateRecurringPaymentInterface" method="estimateByShippingInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
