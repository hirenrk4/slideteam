<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="tatvasoft" translate="label" sortOrder="10">
            <label>TATVASOFT</label>
        </tab>
        <section id="paidcustomer" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Paid Customer Configuration</label>
            <tab>tatvasoft</tab>
            <resource>Tatva_PaidCustomerPopup::tatva_config</resource>
            <group id="email_config" type="text" sortOrder="1" showInDefault="2" showInWebsite="2" showInStore="1" translate="label">
                <label>Paid Customer Email Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="to_email" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send Emails(To) for Padi Customer Data</label>
                    <comment>Please enter emails(,) seperated</comment>
                </field>
                <field id="cc_email" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send Emails(Cc) for Padi Customer Data</label>
                    <comment>Please enter emails(,) seperated</comment>
                </field>
                <field id="bcc_email" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send Emails(Bcc) for Padi Customer Data</label>
                    <comment>Please enter emails(,) seperated</comment>
                </field>
            </group>
        </section>
    </system>
</config>