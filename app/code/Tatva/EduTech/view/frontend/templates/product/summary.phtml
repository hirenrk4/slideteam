               <span>
                  <span itemprop="ratingValue"><?= $block->escapeHtml($rating); ?></span>% of <span itemprop="bestRating">100</span>
               </span>
            </span>
         </div>
      <?php else : ?>
         <div class="rating-result">
            <span style="width:0%">
               <span>
                  <span itemprop="ratingValue">0</span>% of <span itemprop="bestRating">100</span>
