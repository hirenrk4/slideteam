<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>        
        <tab id="slideteams_configuration" translate="label" sortOrder="10">
            <label>SLIDETEAM'S CONFIGURATION</label>
        </tab>
        <section id="tatva" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">            
            <tab>slideteams_configuration</tab>           
            <group id="questionnaire" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Questionnaire</label>
                <field id="email" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
            </group>            
        </section>
        <section id="contact" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">                    
            <group id="customemail" translate="label" type="text" sortOrder="51" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Emails</label>
                <field id="recipient_email_design" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label> Questionnaire Recipient(To)</label>
                    <comment>Please enter emails(,) seperated</comment>
                </field>
                <field id="recipient_contact_email_design" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label> Contact Recipient(To)</label>
                    <comment>Please enter emails(,) seperated</comment>
                </field>
                <field id="recipient_email_design_cc1" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label> Questionnaire and Contact Recipient(Cc)</label> 
                    <comment>Please enter emails(,) seperated</comment>                   
                </field>
                <field id="recipient_email_design_bcc" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label> Questionnaire and Contact Recipient(Bcc)</label> 
                    <comment>Please enter emails(,) seperated</comment>                   
                </field>
            </group>            
        </section>
    </system>
</config>