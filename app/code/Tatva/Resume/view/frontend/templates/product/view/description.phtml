 */
?>
<?php
$_description = $this->getProduct()->getDescription(); 
$_product = $this->getProduct();
$_helper = $this->helper('Magento\Catalog\Helper\Output');
$languagestatus = $_helper->productAttribute($_product, $_product->getLanguagestatus(), 'languagestatus');
?>
<?php if ($_description): ?>
	<?php if (isset($_GET['lang']) && $languagestatus == 1): 
  		$lang = strtolower($_GET['lang']);
  		$languages = array("spanish","german","french","portuguese");
	?>
	<?php if (in_array($lang, $languages)): ?> 
  		<?php $lang_para = $this->getCurrentlangdata();
				$data = $lang_para[64];
				$comp = explode("<html>", $data); ?>
				<p><?php echo $comp[0]; ?></p>
	<?php else: ?>
	<p>
		<?php echo $this->helper('Magento\Catalog\Helper\Output')->productAttribute($this->getProduct(), $_description, 'description') ?>
	</p>
	<?php endif; ?>
	<?php else: ?>
	<p>
		<?php echo $this->helper('Magento\Catalog\Helper\Output')->productAttribute($this->getProduct(), $_description, 'description') ?>
	</p>
	<?php endif; ?> 
<?php endif; ?>