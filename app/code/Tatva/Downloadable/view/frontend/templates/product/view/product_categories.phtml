/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php $current_category = $block->getCurrentCategory(); ?>
<?php $cat = $block->getProductCollection();
?>
<div class="product-info-bottom">
    <p class="heading"><?php echo __('People who downloaded this PowerPoint presentation also viewed the following :') ?></p>
    <ul class="product-tags clearfix">
        <?php $visualCategory = $categoryData = [];  ?>
        <?php $i = 0; ?>
        <?php foreach ($cat as $category): ?>
            
            <?php 
                if($category->getVisualSearch() === '1'){
                    continue;
                } else {
                    $categoryData[$category['entity_id']]['name'] = $category->getName();
                    $categoryData[$category['entity_id']]['url'] = $category->getUrl();
                }
            ?>
        <?php endforeach; ?>
        <li>
        <?php foreach ($categoryData as $key => $value): ?>
            <?php if($key == $current_category['entity_id']):
                ?>
                <span class="sharebigtag"><?php echo $value['name']; ?></span>
            <?php else:
                ?>
                <a class="sharesmalltag" href="<?php echo $value['url']; ?>" title="<?php echo $value['name']; ?>"><?php echo $value['name']; ?></a>
            <?php endif; ?>
            <?php if(++$i != sizeof($categoryData)): ?> , <?php endif; ?>
        <?php endforeach; ?>
        </li>
        
        
    </ul>
</div>